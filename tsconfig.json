{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["es6", "dom", "es2016.array.include"],
    "baseUrl": ".",
    "paths": {
      "esprima": ["node_modules/esprima/dist/esprima"]
    },
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["lib/**/*.ts", "test/**/*.ts"]
}
